@model Autonomize.Models.Venda

@{
    ViewData["Title"] = "Detalhes Venda";
}

<h2 class="mb-4">Detalhes da Venda</h2>

<div class="card p-4 shadow-sm mb-4">
    <dl class="row">
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.Cliente)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.Cliente.Nome)
        </dd>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.Data)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.Data)
        </dd>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.Valor)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.Valor)
        </dd>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.QuantidadeVenda)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.QuantidadeVenda)
        </dd>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.Tipo)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.Tipo)
        </dd>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.Produto)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.Produto.Descricao)
        </dd>
    </dl>
    <div class="d-flex justify-content-start gap-2">
        <a asp-action="Edit" class="btn btn-azul" asp-route-id="@Model?.Id">Editar</a> 
        <a asp-action="Index" class="btn btn-danger">Voltar</a>
    </div>
</div>

