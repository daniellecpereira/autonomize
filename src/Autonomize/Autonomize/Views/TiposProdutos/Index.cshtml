@model IEnumerable<Autonomize.Models.TiposProduto>

@{
    ViewData["Title"] = "Tipos de Produtos";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Tipos de Produtos</h2>
    <a asp-action="Create" class="btn btn-primary">+ Novo Tipo de Produto</a>
</div>

<div class="table-responsive shadow-sm rounded">
    <table class="table table-hover table-bordered bg-white">
        <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                        <div class="d-flex gap-2">                            
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">✏</a>                           
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">🗑️</a>
                        </div>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
