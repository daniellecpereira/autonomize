@model Autonomize.Models.Produto

@{
    ViewData["Title"] = "Apagar Produto";
}

<h2 class="mb-4 text-danger">Excluir Produto</h2>

<div class="card p-4 shadow-sm mb-4 border border-danger">
    <dl class="row">
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.QuantidadeEstoque)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.QuantidadeEstoque)
        </dd>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.PrecoCompra)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.PrecoCompra)
        </dd>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.PrecoVenda)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.PrecoVenda)
        </dd>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.TiposProduto)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.TiposProduto.Nome)
        </dd>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.DataCadastro)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.DataCadastro)
        </dd>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.Ativo)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.Ativo)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger me-2" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
