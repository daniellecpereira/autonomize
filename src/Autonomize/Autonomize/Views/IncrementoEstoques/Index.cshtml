@model IEnumerable<Autonomize.Models.IncrementoEstoque>

@{
    ViewData["Title"] = "Incremento Estoque";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Incremento Estoque</h1>
    <a asp-action="Create" class="btn btn-primary">+ Novo Produto</a>
</div>


<div class="table-responsive shadow-sm rounded">
    <table class="table table-hover table-bordered bg-white">
        <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.TipoOperacao)</th>
            <th>@Html.DisplayNameFor(model => model.Produto)</th>
            <th>@Html.DisplayNameFor(model => model.Quantidade)</th>
            <th>@Html.DisplayNameFor(model => model.MotivoOperacao)</th>
            <th>@Html.DisplayNameFor(model => model.Observacao)</th>
            <th>@Html.DisplayNameFor(model => model.DataOperacao)</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
            @foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.TipoOperacao)</td>
            <td> @Html.DisplayFor(modelItem => item.Produto.Nome)</td>
            <td>@Html.DisplayFor(modelItem => item.Quantidade)</td>
            <td>@Html.DisplayFor(modelItem => item.MotivoOperacao)</td>
            <td>@Html.DisplayFor(modelItem => item.Observacao)</td>
            <td>@Html.DisplayFor(modelItem => item.DataOperacao)</td>
            <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">✏</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">🔎</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">🗑️</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>