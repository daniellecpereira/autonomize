}

<h2 class="mb-4">Detalhes do Incremento</h2>

<div class="card p-4 shadow-sm mb-4">
    <dl class="row">
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.TipoOperacao)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.TipoOperacao)
        </dd>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.Produto)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.Produto.Nome)
        </dd>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.Quantidade)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.Quantidade)
        </dd>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.MotivoOperacao)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.MotivoOperacao)
        </dd>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.Observacao)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.Observacao)
        </dd>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.DataOperacao)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.DataOperacao)
        </dd>
    </dl>
<div class="d-flex justify-content-start gap-2">
        <a asp-action="Edit" class="btn btn-azul" asp-route-id="@Model?.Id">Editar</a> 
        <a asp-action="Index" class="btn btn-danger">Voltar</a>
    </div>
</div>

